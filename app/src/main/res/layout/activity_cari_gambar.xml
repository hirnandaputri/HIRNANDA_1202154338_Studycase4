<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kem.example.com.hirnandaputri_1202154338_studycase4.CariGambar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="Cari Gambar"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/sourcegambar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="http://images6.fanpop.com/image/photos/36300000/Barbie-And-Her-Sisters-In-A-Pony-Tale-image-barbie-and-her-sisters-in-a-pony-tale-36339231-1920-1080.jpg" />

        <Button
            android:id="@+id/buttongambar"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="#FF4081"
            android:onClick="search"
            android:text="Klik Untuk Mencari Gambar"
            android:textAllCaps="false"
            android:textColor="#FFFF"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/gambar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"/>

    </LinearLayout>
</ScrollView>
